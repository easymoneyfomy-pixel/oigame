{
  "name": "pudge-wars",
  "version": "1.8.0",
  "description": "Multiplayer .io game - Pudge Wars clone (Warcraft 3)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "prod": "NODE_ENV=production node server.js",
    "lint": "eslint . --ext .js",
    "test": "node test/server.test.js",
    "generate-textures": "node generate_textures.js",
    "healthcheck": "curl -f http://localhost:8080/health || exit 1",
    "postinstall": "node scripts/postinstall.js",
    "verify": "npm run lint && npm run test",
    "clean": "rm -rf node_modules package-lock.json",
    "build": "echo 'Build complete' && npm run verify"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0"
  },
  "keywords": [
    "websocket",
    "game",
    "multiplayer",
    "io",
    "pudge",
    "dota",
    "warcraft3"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pudge-wars.git"
  }
}
